# Environment Configuration for RAG vs Fine-Tuning Financial QA System
# Copy this file to .env and customize for your deployment

# Application Settings
APP_NAME=Financial QA System
APP_VERSION=1.0.0
DEBUG=false

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=false

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
USE_GPU=true

# Model Configuration
BASE_MODEL_PATH=models/Llama-3.1-8B-Instruct
EMBEDDING_MODEL_PATH=models/mxbai-embed-large-v1
FINETUNED_MODEL_PATH=models/llama31-financial-qa-merged

# Data Paths
RAW_DATA_PATH=data/raw
PROCESSED_DATA_PATH=data/processed
DATASET_PATH=data/dataset
DOCS_FOR_RAG_PATH=data/docs_for_rag

# Database Configuration (Optional)
DATABASE_URL=postgresql://qa_user:secure_password_123@postgres:5432/financial_qa
POSTGRES_DB=financial_qa
POSTGRES_USER=qa_user
POSTGRES_PASSWORD=secure_password_123

# Redis Configuration (Optional)
REDIS_URL=redis://redis:6379/0

# Model Download Settings
HUGGINGFACE_HUB_CACHE=/app/models
HF_HOME=/app/models

# Performance Settings
MAX_WORKERS=4
BATCH_SIZE=1
MAX_LENGTH=1024
TOP_K_RETRIEVAL=5

# Security (Change these in production!)
SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Coolify Specific (if using Coolify)
COOLIFY_APP_ID=financial-qa-system
COOLIFY_DOMAIN=your-domain.com
